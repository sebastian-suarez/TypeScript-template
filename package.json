{
	"name": "typescript-template",
	"version": "1.0.0",
	"description": "TypeScript Node.js starter with tsx watch, path aliases, XO, Prettier, AVA, Husky, and lint-staged ready to go.",
	"type": "module",
	"imports": {
		"#src/*": "./src/*"
	},
	"scripts": {
		"start": "tsx watch -r dotenv/config src/index.ts",
		"test": "ava",
		"prepare": "husky"
	},
	"engines": {
		"node": ">=18"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sebastian-suarez/TypeScript-template.git"
	},
	"keywords": [
		"typescript",
		"node",
		"template",
		"starter",
		"tsx",
		"path-alias",
		"ava",
		"xo",
		"prettier",
		"husky",
		"lint-staged"
	],
	"author": "Sebastian Suarez <6.oceanic-curlers@icloud.com> (https://www.sebastiansuarez.dev)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/sebastian-suarez/TypeScript-template/issues"
	},
	"homepage": "https://github.com/sebastian-suarez/TypeScript-template#readme",
	"devDependencies": {
		"@ava/typescript": "^6.0.0",
		"@tsconfig/node22": "^22.0.2",
		"@types/node": "^24.9.1",
		"ava": "^6.4.1",
		"dotenv": "^17.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"prettier": "3.6.2",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3",
		"xo": "^1.2.3"
	},
	"lint-staged": {
		"**/*.{js,cjs,mjs}": [
			"xo --fix",
			"prettier --write"
		],
		"**/*.{json,md}": "prettier --write"
	},
	"xo": {
		"prettier": true
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsx"
		],
		"require": [
			"dotenv/config"
		]
	}
}
